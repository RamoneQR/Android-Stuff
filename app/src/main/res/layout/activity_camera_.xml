<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ramone.firebaseauthdemo.Camera_Activity">


    <TextureView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textureView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/video_online_Btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@mipmap/btn_record_video_start"
        android:src="@mipmap/btn_record_video_start"
        android:layout_alignTop="@+id/capture_Btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="47dp"
        android:onClick="captureVideo"/>

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@mipmap/photo_capture_btn"
        android:src="@mipmap/photo_capture_btn"
        android:id="@+id/capture_Btn"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
